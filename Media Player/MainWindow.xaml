<Window x:Class="SimpleMediaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple Media Player" Height="550" Width="800" AllowsTransparency="True"
        WindowStartupLocation="CenterScreen" WindowStyle="None"
        >
    <Border Background="#044a3c" CornerRadius="15" Margin="0,0,-42,-64">

        <Grid>
            <Grid VerticalAlignment="Top" Background="Black">
                <StackPanel Height="20" WindowChrome.IsHitTestVisibleInChrome="True" VerticalAlignment="Center" HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button Width="20" Name="BTN_Minimize" Content="🗕" Background="#FFD13EF3" Click="BTN_Minimize_Click"/>
                    <Button Width="20" Name="BTN_Maximize" Content="🗖" Background="#FFD13EF3"/>
                    <Button Width="20" Name="BTN_Close" Content="✕" Background="#FFD13EF3"/>
                </StackPanel>
            </Grid>

            <Grid Margin="10,20,0,0" Background="Transparent">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="600"/>
                    <ColumnDefinition Width="200"/>



                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>

                <!-- MediaElement: Spielt Audio/Video -->
                <MediaElement x:Name="mediaElement" LoadedBehavior="Manual" UnloadedBehavior="Stop" Margin="72,28,78,66" Height="450" Width="450" />
                <Rectangle HorizontalAlignment="Left" Stroke="Black" Margin="72,28,0,0" VerticalAlignment="Top" Height="450" Width="450" Fill="Black" />
                <Rectangle Stroke="Black" Grid.Column="1" Margin="0,10,-32,0" Fill="#FFB76F6F"/>
                <!-- Buttons zur Steuerung -->
                <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" Background="#351231" Grid.ColumnSpan="2" Margin="-11,0,-32,0">
                    <Button x:Name="PlayButton" Content=" ▶️ " Width="25" Height="25" Margin="5" HorizontalAlignment="Left" Click="PlayButton_Click" Background="#FF0A0303" FontStyle="Italic" Foreground="#FFEDDEDE" BorderBrush="#FF0C0303" />
                    <Button x:Name="PauseButton" Content="⏸️" Width="25" Margin="5" Height="25" HorizontalAlignment="Left" Click="PauseButton_Click" Background="#FF0A0101" Foreground="#FFF7EFEF" BorderBrush="#FF100101" />
                    <Button x:Name="StopButton" Content="⏹️" Width="25" Margin="5" Height="25" HorizontalAlignment="Left" Click="StopButton_Click" Background="#FF080303" BorderBrush="#FF060202" Foreground="#FFECE0E0"/>
                    <Slider  x:Name="volumeSlider"  Width="105" Height="25" ValueChanged="ChangeMediaVolume" Minimum="0" Maximum="100" Value="1"/>
                    <Button x:Name="ChooseFolder" Content="📂 Datei auswählen" Width="142" Height="25" Click="Select_Folder" HorizontalAlignment="Right" Background="#FF0A0202" Foreground="#FFF1E9E9" BorderBrush="#FFF3E7E7"/>
                </StackPanel>



            </Grid>
        </Grid>
    </Border>
</Window>
