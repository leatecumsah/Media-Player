<Window x:Class="SimpleMediaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple Media Player" Height="350" Width="525">
    <Grid>
        <!-- MediaElement: Spielt Audio/Video -->
        <MediaElement Name="mediaElement" HorizontalAlignment="Center" VerticalAlignment="Top" Width="400" Height="200" LoadedBehavior="Manual"/>

        <!-- Buttons zur Steuerung -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,20,0,0">
            <Button Name="PlayButton" Content="▶️ Abspielen" Width="100" Margin="5" Click="PlayButton_Click"/>
            <Button Name="PauseButton" Content="⏸️ Pause" Width="100" Margin="5" Click="PauseButton_Click"/>
            <Button Name="StopButton" Content="⏹️ Stop" Width="100" Margin="5" Click="StopButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
