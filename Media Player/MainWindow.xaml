<Window x:Name="Mäh" x:Class="SimpleMediaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Simple Media Player" 
        Icon="Assets/1Virus.ico"
        Height="450" 
        Width="800" 
        WindowStyle="None" 
        AllowsTransparency="True" 
        ResizeMode="NoResize" 
        Background="Transparent">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="35"/>
    </WindowChrome.WindowChrome>

    <Border BorderBrush="#FFD5FF" BorderThickness="4" CornerRadius="15" Background="#B47EB3">
        <Grid Margin="6,6,0,0">
            <Grid.RowDefinitions>
                <!-- Titelleiste -->
                <RowDefinition Height="35"/>
                <!-- Video-Bereich -->
                <RowDefinition Height="*"/>
                <!-- Steuerleiste -->
                <RowDefinition Height="53"/>
            </Grid.RowDefinitions>

            <!--  Titelleiste mit Manas hilfe-->
            <DockPanel Grid.Row="0" LastChildFill="True">
                <!-- Äußere Border für die Titelleiste -->
                <Border CornerRadius="15,15,15,15" Background="#8BB8A8" BorderThickness="0" Width="769">
                    <DockPanel VerticalAlignment="Top" Height="35">
                        <!-- Icon -->
                        <Image Source="Assets/1Virus.ico" Width="20" Height="20" Margin="5,0,5,0" VerticalAlignment="Center"/>

                        <!-- Anwendungstitel -->
                        <TextBlock Text="Simple Media Player" 
                       VerticalAlignment="Center" 
                       Foreground="White" 
                       FontSize="16" 
                       FontWeight="Bold" />

                        <!-- Fenstersteuerung -->
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" WindowChrome.IsHitTestVisibleInChrome="True">
                            <Button x:Name="BTN_Minimize" Content="🗕" Style="{StaticResource ControlButtonStyle}" Click="BTN_Minimize_Click"/>
                            <Button x:Name="BTN_Maximize" Content="🗖" Style="{StaticResource ControlButtonStyle}" Click="BTN_Maximize_Click"/>
                            <Button x:Name="BTN_Close" Content="✕" Style="{StaticResource ControlButtonStyle}" Click="BTN_Close_Click"/>
                        </StackPanel>
                    </DockPanel>
                </Border>
            </DockPanel>


            <!-- Video-Bereich -->
            <Border Background="#8BB8A8" Grid.Row="1" CornerRadius="10" Margin="10,10,10,10">
                <MediaElement x:Name="mediaElement" LoadedBehavior="Manual" UnloadedBehavior="Stop" Stretch="Uniform" Margin="0,16,0,0"/>
            </Border>

            <!-- Steuerleiste -->
            <DockPanel Background="#B47EB3" Grid.Row="2" Margin="0,0,7,4" >
                <Button Content="⏮" Style="{StaticResource RoundButtonStyle}" Click="Previous_Click"/>
                <Button Content="▶" Style="{StaticResource RoundButtonStyle}" Click="PlayButton_Click"/>
                <Button Content="⏸" Style="{StaticResource RoundButtonStyle}" Click="PauseButton_Click"/>
                <Button Content="⏭" Style="{StaticResource RoundButtonStyle}" Click="Next_Click" />
                <Button Content="⏹" Style="{StaticResource RoundButtonStyle}" Click="StopButton_Click"/>
                <Button Content="Datei wählen" Click="Select_Folder" FontSize="15" FontWeight="Bold" Width="120" Foreground="White" Margin="5" Background="#8BB8A8" HorizontalAlignment="Right"/>
            </DockPanel>
        </Grid>
    </Border>
</Window>
